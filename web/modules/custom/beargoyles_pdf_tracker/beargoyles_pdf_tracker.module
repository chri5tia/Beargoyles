<?php

/**
 * @file
 * Hooks for Beargoyles PDF Tracker module.
 */

/**
 * Implements hook_preprocess_HOOK() for node templates.
 *
 * Attaches JavaScript for handling PDF downloads.
 */
function beargoyles_pdf_tracker_preprocess_node(&$variables) {
  if ($variables['node']->hasField('field_coloring_page_file') && !$variables['node']->get('field_coloring_page_file')->isEmpty()) {
    $variables['#attached']['library'][] = 'beargoyles_pdf_tracker/beargoyles_pdf_tracker';
  }
}

use Drupal\Core\Messenger\MessengerInterface;

/**
 * Implements hook_preprocess_html().
 *
 * Ensures the PDF download behavior is attached.
 */
function beargoyles_pdf_tracker_preprocess_html(&$variables) {
  \Drupal::messenger()->addMessage("âœ… PDF Tracker Library is being attached globally.", MessengerInterface::TYPE_STATUS);
  $variables['#attached']['library'][] = 'beargoyles_pdf_tracker/beargoyles_pdf_tracker';
}

